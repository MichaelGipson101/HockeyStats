<h1>View stats for <%= @players.first_name %> <%= @players.last_name %></h1>
<table class="table table-dark">
	
	<thead>
		<tr>
			<th scope="col">Season</th>
			<th scope="col">Goals</th>
			<th scope="col">Assists</th>
			<th scope="col">Total Points</th>
		</tr>
	</thead>
	<tbody>
		<% @seasons.each do |season| %>
		<tr>
			<td><%= season.season %></td>
			<td><%= @players.goals %></td>
			<td><%= @players.assists %></td>
			<td><%= @players.goals + @players.assists %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<a class="btn btn-danger" href="/players" role="button">View Other Players</a>