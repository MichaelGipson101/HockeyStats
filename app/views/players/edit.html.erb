<h1>Edit <%= @player.first_name %> <%= @player.last_name %></h1>
<form action="/players/<%= @player.id %>" method="post">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>
		<label>First Name</label>
		<input type="text" name="player[first_name]" value="<%= @player.first_name %>">
	</p>
	<p>
		<label>Last Name</label>
		<input type="text" name="player[last_name]" value="<%= @player.last_name %>">
	</p>
	<p>
	<p>
		<label>Season</label>
		<input type="text" name="player[season]" value="<%= @player.season %>">
	</p>
	<p>
		<label>Goals</label>
		<input type="text" name="player[goals]" value="<%= @player.goals %>">
	</p>
	<p>
		<label>Assists</label>
		<input type="text" name="player[assists]" value="<%= @player.assists %>">
	</p>
	<input type="submit" value="Update">
</form>

<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<p><%= e %></p>
	<% end %>
<% end %>