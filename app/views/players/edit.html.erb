<h1>Edit <%= @player.first_name %> <%= @player.last_name %></h1>
<form action="/players/<%= @player.id %>" method="post">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<div class="form-group">
		<label>First Name</label>
		<input type="text" name="player[first_name]" value="<%= @player.first_name %>" class="form-control">
	</div>
	<div class="form-group">
		<label>Last Name</label>
		<input type="text" name="player[last_name]" value="<%= @player.last_name %>" class="form-control">
	</div>
	<div class="form-group">
		<label>Full Name</label>
		<input type="text" name="player[fnln]" value="<%= @player.fnln %>" class="form-control">
	</div>
	<div class="form-group">
		<label>Season</label>
		<input type="text" name="player[season]" value="<%= @player.season %>" class="form-control">
	</div>
	<div class="form-group">
		<label>Goals</label>
		<input type="text" name="player[goals]" value="<%= @player.goals %>" class="form-control">
	</div>
	<div class="form-group">
		<label>Assists</label>
		<input type="text" name="player[assists]" value="<%= @player.assists %>" class="form-control">
	</div>
	<input type="submit" class="btn btn-danger" value="Update">
</form>

<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<div class="alert alert-danger"><%= e %></div>
	<% end %>
<% end %>