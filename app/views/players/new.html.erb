<h1>Create Player</h1>
<form action="/players" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>
		<label>First Name</label>
		<input type="text" name="player[first_name]">
	</p>
	<p>
		<label>Last Name</label>
		<input type="text" name="player[last_name]">
	</p>
	<p>
		<label>Season</label>
		<input type="text" name="player[season]">
	</p>
	<p>
		<label>Goals</label>
		<input type="text" name="player[goals]">
	</p>
	<p>
		<label>Assists</label>
		<input type="text" name="player[assists]">
	</p>
	<input type="submit" value="create">
</form>

<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<p><%= e %></p>
	<% end %>
<% end %>	