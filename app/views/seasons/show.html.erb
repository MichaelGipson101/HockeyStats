<h1>View Season's <%= pluralize(@players.count, "Player") %></h1>
<table class="table table-dark">
	
	<thead >
		<tr>
			<th scope="col">First Name</th>
			<th scope="col">Last Name</th>
			<th scope="col">Goals</th>
			<th scope="col">Assists</th>
			<th scope="col">Total Points</th>
		</tr>
	</thead>
	<tbody>
		<% @players.each do |player| %>
		<tr>
			<td><%= player.first_name %></td>
			<td><%= player.last_name %></td>
			<td><%= player.goals %></td>
			<td><%= player.assists %></td>
			<td><%= player.goals + player.assists %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<table class="table table-dark">
	
	<thead >
		<tr>
			<th scope="col">Highest Total Points</th>
			<th scope="col">Lowest Total Points</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><%= @maxpoints %></td>
			<td><%= @minpoints %></td>
		</tr>
	</tbody>
</table>
<a class="btn btn-danger" href="/seasons" role="button">Seasons</a>